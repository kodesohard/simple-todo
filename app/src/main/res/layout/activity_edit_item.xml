<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dzheng.simpletodo.EditItemActivity">

    <EditText
        android:id="@+id/editTaskText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="101dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnUpdateTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_alignBottom="@+id/editTaskText"
        android:layout_toEndOf="@+id/editTaskText"
        android:layout_marginStart="24dp"
        android:onClick="onSubmit"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="Edit Task"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editTaskText"
        android:textSize="24dp"/>
</android.widget.RelativeLayout>
